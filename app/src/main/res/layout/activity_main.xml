<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/launch_success_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/success_dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/launch_notification_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/launch_location_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_dialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/launch_internet_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/internet_dialog"
        android:textAllCaps="false" />
</LinearLayout>